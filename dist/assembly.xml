<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="
        http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>zip-distribution</id>
	<formats>
		<format>zip</format>
	</formats>
	<baseDirectory>stripes-${project.version}</baseDirectory>
	<fileSets>
		<!-- Support files from the dist module -->
		<fileSet>
			<directory>src/assembly</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>

		<!-- Minimal dependencies -->
		<fileSet>
			<directory>${project.build.directory}/lib</directory>
			<outputDirectory>/lib</outputDirectory>
		</fileSet>

		<!-- Stripes source code -->
		<fileSet>
			<directory>../stripes/src/main/java</directory>
			<outputDirectory>/src</outputDirectory>
		</fileSet>

		<!-- Stripes Javadocs -->
		<fileSet>
			<directory>../stripes/target/apidocs</directory>
			<outputDirectory>/docs/javadoc</outputDirectory>
		</fileSet>

		<!-- Example application source code, resources, documentation, etc. -->
		<fileSet>
			<directory>../examples/src/main/java</directory>
			<outputDirectory>/examples/src</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../examples/src/main/resources</directory>
			<outputDirectory>/examples/src</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../examples/target/stripes-examples-${project.version}</directory>
			<outputDirectory>/examples/webapp</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>../examples/target/apidocs</directory>
			<outputDirectory>/examples/javadoc</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<!-- Default StripesResources.properties file -->
		<file>
			<source>../stripes/src/main/resources/StripesResources.properties</source>
			<outputDirectory>/lib</outputDirectory>
		</file>

		<!-- Example WAR -->
		<file>
			<source>../examples/target/stripes-examples-${project.version}.war</source>
			<outputDirectory>/examples</outputDirectory>
			<destName>stripes-examples.war</destName>
		</file>
	</files>
</assembly>